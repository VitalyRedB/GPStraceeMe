<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- Верхний блок с параметрами -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.82"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#222222">

        <!-- Заголовок -->
        <TextView
            android:id="@+id/headerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setting Tracker Info"
            android:textColor="#A4C639"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:shadowColor="#55000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1.5"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@android:color/transparent" />

        <!-- START_HOUR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="START_HOUR:"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_start_hour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="08:00"
                android:text="08:00"
                android:inputType="time"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/edittext_background"
                android:padding="8dp" />
        </LinearLayout>

        <!-- END_HOUR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="END_HOUR:"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_end_hour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="20:00"
                android:text="20:00"
                android:inputType="time"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/edittext_background"
                android:padding="8dp" />
        </LinearLayout>

        <!-- INTERVAL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="INTERVAL:"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_interval"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="00:10"
                android:text="00:10"
                android:inputType="time"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/edittext_background"
                android:padding="8dp" />
        </LinearLayout>

        <!-- TOKEN -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TOKEN:"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_token"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="SECRET123"
                android:text="SECRET123"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/edittext_background"
                android:padding="8dp" />
        </LinearLayout>

        <!-- USER_ID -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="USER_ID:"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_user_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="YOUR_TRACKER_ID_123"
                android:text="YOUR_TRACKER_ID_123"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray"
                android:background="@drawable/edittext_background"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Кнопка СТАРТ -->
        <Button
            android:id="@+id/button_start_tracker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAVE and EXIT"
            android:layout_marginTop="8dp"
            android:textAllCaps="false"
            android:backgroundTint="#A4C639"
            android:textColor="#000000"
            android:padding="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/headerTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password Info"
                android:textColor="#A4C639"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:shadowColor="#55000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1.5"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@android:color/transparent" />



            <!-- Поле для текущего пароля -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="SETTING PASS:"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edit_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="12345"
                    android:text="12345"
                    android:inputType="time"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@drawable/edittext_background"
                    android:padding="8dp" />
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <!-- Подвал -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.18"
        android:gravity="bottom"
        android:orientation="vertical">
        <include layout="@layout/developer_info_layout" />
    </LinearLayout>
</LinearLayout>

